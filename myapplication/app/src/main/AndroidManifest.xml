<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bookwormng.android" >
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/RedTheme" >
        <activity
            android:logo="@drawable/twitter_logo"
            android:name=".MainActivity"
            android:label="Log in"
            android:parentActivityName=".FirstActivity"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuestionActivity"
            android:label="@string/title_activity_question"
            android:parentActivityName=".HomeActivity"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:logo="@android:drawable/ic_menu_gallery"
            android:name=".SelectPictureActivity"
            android:label="@string/title_activity_select_picture"
            android:parentActivityName=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.ASSIST" />
            </intent-filter>
        </activity>
        <activity
            android:logo="@drawable/twitter_logo"
            android:name=".TwitterProfileActivity"
            android:label="@string/title_activity_twitter_profile"
            android:parentActivityName=".HomeActivity"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".MySettingsActivity"
            android:label="@string/title_activity_my_settings"
            android:parentActivityName=".HomeActivity" >
        </activity>
        <activity
            android:name=".SyncDataActivity"
            android:label="@string/title_activity_sync_data" >
        </activity>
        <activity
            android:name=".LogOutActivity"
            android:label="@string/title_activity_log_out" >
        </activity>
        <activity
            android:logo="@android:drawable/ic_menu_preferences"
            android:name=".FirstActivity"
            android:label="@string/title_activity_first" >
        </activity>
        <activity
            android:name=".QuestionTemporaryActivity"
            android:label="@string/title_activity_question_temporary"
            android:parentActivityName=".FirstActivity">
        </activity>
    </application>
</manifest>
