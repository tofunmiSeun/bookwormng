<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bookwormng.android.QuestionActivityFragment"
    tools:showIn="@layout/activity_question"
    android:focusable="true"
    android:id="@+id/relativeLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:background="#ffd3d3d3">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView3"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:focusable="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:fillViewport="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout"
                android:weightSum="0.85"
                android:background="@android:drawable/picture_frame"
                android:layout_gravity="center"
                android:padding="20dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:focusable="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Large Text"
                        android:id="@+id/textView7"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/customTextColor" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageView2"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.15"
                        android:src="@android:drawable/ic_menu_help"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:layout_weight="0.15"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:text="The WHO is concerned with HEALTH, the IMF is concerned with __?"
                    android:textColor="#ff3e2723"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText5"
                    android:layout_weight="0.05"
                    android:hint="answer"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center_horizontal"
                    android:singleLine="true"
                    android:imeOptions="actionDone"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Answer"
                    android:id="@+id/button5"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/round_border"
                    android:textColor="@color/themeColor" />

            </LinearLayout>
        </ScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="swipe right to skip a question"
            android:id="@+id/textView8"
            android:layout_alignBottom="@+id/scrollView3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:textColor="#e8797f76" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Swipes left:"
            android:id="@+id/textView23"
            android:layout_alignBottom="@+id/textView22"
            android:layout_toLeftOf="@+id/textView22"
            android:layout_toStartOf="@+id/textView22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:id="@+id/textView22"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="#ffc6152f" />

    </RelativeLayout>

</RelativeLayout>
